# Auth.js (next-auth v5)
# Generate with: npx auth secret
AUTH_SECRET=

# Facebook OAuth App credentials
# https://developers.facebook.com/apps/
AUTH_FACEBOOK_ID=
AUTH_FACEBOOK_SECRET=

# Supabase â€” project URL and anon key (public, safe for client)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase Service Role Key (server-only, never NEXT_PUBLIC_)
# Used by API routes for mutations (inserts, updates, deletes)
SUPABASE_SERVICE_ROLE_KEY=

# Guest login shared password
GUEST_PASSWORD=

# App URL (used for auth callbacks)
# Set to your Vercel domain in production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Anthropic API Key (for AI event scraper)
ANTHROPIC_API_KEY=

# Cron Secret (for Vercel cron job authentication)
CRON_SECRET=
